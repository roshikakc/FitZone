@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
</head>

<body>
    <div class="hero-section d-flex justify-content-center align-items-center text-center text-white">
        <div class="overlay"></div>
        <div class="content">
            <h1 class="display-1 fw-bold ">By Athletes <br />For Athletes</h1>
            <p class="lead">Welcome to FitZone. We're more than gym. We're a community</p>
            <a href="#" class="btn btn-warning btn-lg mt-3 text-white">Sign Up</a>
        </div>
    </div>

    <section class="features py-5">
        <div class="container text-center">
            <h3>Our Programs</h3>
            <h2 class=" mb-4">Explore Our Wide Range Of Programs</h2>

            <div class="slide-container">
                <div class="slide-content">
                    <div class="card-wrapper ">
                        <div class="card-program">
                            <div class="image-content">
                                <img src="~/images/digital.jpg" alt="slide 1" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Digital Classes</h2>
                                <p class="description">Workout Anywhere</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>


                        <!-- Slide 2 -->
                        <div class="card-program">
                            <div class="image-content">
                                <img src="~/images/group.jpg" alt="slide 2" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Group Training</h2>
                                <p class="description">Train Together</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>

                        <!-- Slide 3 -->
                        <div class="card-program">
                            <div class="image-content">
                                <img src="~/images/personaltraining.jpg" alt="slide 3" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Personal Training</h2>
                                <p class="description">1-on-1 Coaching</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>

                        <!--Fourth slide -->
                        <div class="card-program">
                            <div class="image-content">
                                <img src="~/images/outdoor.jpg" alt="slide 4" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Personal Training</h2>
                                <p class="description">1-on-1 Coaching</p>
                                <button class="button">Join Now</button>
                            </div>

                        </div>
                    </div>
                </div>

            </div>



    </section>

    <section class="pricing-section">
        <div class="container text-center">
            <p class="section-subtitle">Pricing</p>
            <h2 class="section-title">Special Plan</h2>

            <div class="pricing-cards">

                <!--Basic-->
                <div class="pricing-card">
                    <div class="pricing-header">
                        <button class="plan-badge gray-badge">Basic</button>
                    </div>
                    <h3 class="price">Rs.3000</h3>
                    <ul class="features">
                        <li>Coaching</li>
                        <li>30 sessions</li>
                        <li>5 sessions in a week</li>
                        <li>Full access at the gym</li>
                        <li>Choose all exercise program</li>
                    </ul>
                    <button class="btn-pricing full gray-btn">Join Now</button>
                </div>

                <!--Premiun-->
                <div class="pricing-card premium ">
                    <div class="pricing-header">
                        <button class="plan-badge green">Premium</button>
                    </div>
                    <h3 class="price">Rs.5000</h3>
                    <ul class="features">
                        <li>Coaching</li>
                        <li>60 sessions</li>
                        <li>5 sessions in a week</li>
                        <li>Full access at the gym</li>
                        <li>Choose all exercise program</li>
                    </ul>
                    <button class="btn-pricing full green-btn">Join Now</button>
                </div>

                <!--Platinum-->
                <div class="pricing-card ">
                    <div class="pricing-header">
                        <button class="plan-badge gray-badge">Platinum</button>
                    </div>
                    <h3 class="price">Rs.9000</h3>
                    <ul class="features">
                        <li>Coaching</li>
                        <li>90 sessions</li>
                        <li>5 sessions in a week</li>
                        <li>Full access at the gym</li>
                        <li>Choose all exercise program</li>
                    </ul>
                    <button class="btn-pricing full gray-btn">Join Now</button>
                </div>
            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
