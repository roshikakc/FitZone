@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
</head>

<body>
    <div class="hero-section d-flex justify-content-center align-items-center text-center text-white">
        <div class="overlay"></div>
        <div class="content">
            <h1 class="display-1 fw-bold ">By Athletes <br />For Athletes</h1>
            <p class="lead">Welcome to FitZone. We're more than gym. We're a community</p>
            <a href="#" class="btn btn-warning btn-lg mt-3">Sign Up</a>
        </div>
    </div>

    <section class="features py-5">
        <div class="container text-center">
            <h3 class="text-white">Our Programs</h3>
            <h2 class="text-white mb-4">Explore Our Wide Range Of Programs</h2>

            <div class="slide-container ">
                <div class="slide-content">
                    <div class="card-wrapper">
                       <div class="card-program"></div>
                            <div class="image-content">
                                <img src="~/images/personaltraining.jpg" alt="first" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Digital Classes</h2>
                                <p class="description">Workout Anywhere</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>

                        <!-- Slide 2 -->
                        <div class="-slide card-program">
                            <div class="image-content">
                                <img src="~/images/digital.jpg" alt="second" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Digital Classes</h2>
                                <p class="description">Workout Anywhere</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>

                        <!-- Slide 3 -->
                        <div class="-slide card-program">
                            <div class="image-content">
                                <img src="~/images/group.jpg" alt="third" class="card-img-full" />
                            </div>
                            <div class="card-contain">
                                <h2 class="name">Group Training</h2>
                                <p class="description">Train Together</p>
                                <button class="button">Join Now</button>
                            </div>
                        </div>
                    </div>
                </div>
                   
            </div>
    </section>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
